@model HTUproject.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="img"><img src="~/Image/logo2.png" /></div>
<h2>Register Employee</h2>

@using (Html.BeginForm("RegisterTeacher", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Company, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => Model.Company, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Details, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => Model.Details, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-info" value="Add" />
        </div>
    </div>

}
