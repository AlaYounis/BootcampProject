@model HTUproject.Models.SkillSelection
@using HTUproject.Models;
@{
    ViewBag.Title = "SkillsAndCv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    select[multiple], select[size] {
        height: 150px;
        width: 90px;
    }
</style>
<div class="img"><img src="~/Image/logo2.png" /></div>
<h2>Skills</h2>

@using (Html.BeginForm("SkillsAndCv", "SkillsAndCV", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h4>Choose Skills</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.ListBoxFor(x => x.Skills, (ViewData["Skills"] as List<Skill>)
    .Select(z => new SelectListItem
    {
     Text = z.SkillName,
     Value = z.Id + ""
    }
    ).ToList(), new { @multiple = "true" })



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-info" />
            </div>
        </div>
    </div>
    
}


